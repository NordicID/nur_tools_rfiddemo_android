<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/q_spinner" />

        <Spinner
            android:id="@+id/q_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rounds_spinner" />

        <Spinner
            android:id="@+id/rounds_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/session_spinner" />

        <Spinner
            android:id="@+id/session_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/target_spinner" />

        <Spinner
            android:id="@+id/target_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tx_level_spinner" />

        <Spinner
            android:id="@+id/txlevel_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/antenna_spinner" />

        <com.nordicid.rfiddemo.MultiSelectionSpinner
            android:id="@+id/antenna_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/region_spinner" />

        <com.nordicid.rfiddemo.MultiSelectionSpinner
            android:id="@+id/region_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/rfprofile_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rfprofile_spinner" />

        <Spinner
            android:id="@+id/rfprofile_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/linkfreq_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/link_freg_spinner" />

        <Spinner
            android:id="@+id/linkfreq_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/rxdecod_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rx_decod_spinner" />

        <Spinner
            android:id="@+id/rxdecod_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txmodul_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tx_modul_spinner" />

        <Spinner
            android:id="@+id/txmodul_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/invfilter_min_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inventory filter Min" />

        <Spinner
            android:id="@+id/invfilter_min_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/invfilter_max_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inventory filter Max" />

        <Spinner
            android:id="@+id/invfilter_max_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/readfilter_min_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Read filter Min" />

        <Spinner
            android:id="@+id/readfilter_min_spinner"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/readfilter_max_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Read filter Max" />

        <Spinner
            android:id="@+id/readfilter_max_spinner"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/writefilter_min_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Write filter Min" />

        <Spinner
            android:id="@+id/writefilter_min_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/writefilter_max_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Write filter Max" />

        <Spinner
            android:id="@+id/writefilter_max_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/autotune_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/autotune_checkbox" />

        <CheckBox
            android:id="@+id/autotune_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/autotune_checkbox" />

    </LinearLayout>
</ScrollView>

